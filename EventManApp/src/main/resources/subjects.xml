<subjects>
    <subject identifier="event" storage="system" description="Event" actions="add,remove,gets,getsall">
        <field name="id" field="id" type="int" mandatory="true" modifier="auto" defaultValue="1"/>
        <field name="title" field="title" description="Title" type="str" mandatory="true" modifier="user" defaultValue="workshop"/>
        <field name="location" field="location" description="Location" type="str" mandatory="false" modifier="user" defaultValue="here"/>
        <field name="capacity" field="capacity" description="Capacity" type="unsigned" mandatory="false" modifier="user" defaultValue="1"/>
        <field name="date" field="date" description="Date" type="date" mandatory="false" modifier="user" defaultValue="%DATE%"/> <!-- Example Date -->
        <field name="starttime" field="starttime" description="Time" type="time" mandatory="false" modifier="user" defaultValue="%TIME%"/>
        <field name="duration" field="duration" description="Duration" type="duration" mandatory="false" modifier="user" defaultValue="PT15M"/>
    </subject>
    <subject identifier="participant" storage="system" description="Participant" actions="add,remove,gets,getsall">
        <field name="id" field="id" type="int" mandatory="true" modifier="auto" defaultValue="1"/>
        <field name="name" field="name" description="Name" type="str" mandatory="true" modifier="user" defaultValue=""/>
        <field name="email" field="email" description="Email" type="str" mandatory="false" modifier="user" defaultValue=""/>
    </subject>    
    <subject identifier="organize" storage="system" description="Organize" actions="add,remove,gets,getsall">
        <field name="id" field="id" type="int" mandatory="true" modifier="auto" defaultValue="1"/>
        <field name="eventid" field="eventid" relation="id:event.title" description="Event" type="int" mandatory="true" modifier="user" defaultValue=""/>
        <field name="participantid" field="participantid" relation="id:participant.name" description="Participant" type="int" mandatory="false" modifier="user" defaultValue=""/>
    </subject>
</subjects>

